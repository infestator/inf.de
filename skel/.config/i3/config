# i3 config file (v4)
#
# Please see http://i3wm.org/docs/userguide.html for a complete reference!

set $mod Mod4

# workspace names
set $ws_home 1:home
set $ws_web 2:web
set $ws_dev 3:dev
set $ws_comm 4:comm
set $ws_media 5:media
set $ws_games 6:games
set $ws_tmp 7:tmp

set $default_font -*-terminus-medium-*-*-*-18-*-*-*-*-*-iso10646-1

set $clr_focused_border              #4c7899
set $clr_focused_backgr              #285577
set $clr_focused_text                #ffffff
set $clr_focused_indicator           #2e9ef4
set $clr_focused_inactive_border     #333333
set $clr_focused_inactive_backgr     #5f676a
set $clr_focused_inactive_text       #ffffff
set $clr_focused_inactive_indicator  #484e50
set $clr_unfocused_border            #333333
set $clr_unfocused_backgr            #222222
set $clr_unfocused_text              #888888
set $clr_unfocused_indicator         #292d2e
set $clr_urgent_border               #2f343a
set $clr_urgent_backgr               #900000
set $clr_urgent_text                 #ffffff
set $clr_urgent_indicator            #900000




# colors
# class                 border                       backgr                       text                       indicator
client.focused          $clr_focused_border          $clr_focused_backgr          $clr_focused_text          $clr_focused_indicator
client.focused_inactive $clr_focused_inactive_border $clr_focused_inactive_backgr $clr_focused_inactive_text $clr_focused_indicator
client.unfocused        $clr_unfocused_border        $clr_unfocused_backgr        $clr_unfocused_text        $clr_unfocused_indicator
client.urgent           $clr_urgent_border           $clr_urgent_backgr           $clr_urgent_text           $clr_urgent_indicator

# font for window titles. ISO 10646 = Unicode
font $default_font

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

workspace_layout tabbed

# start a terminal
bindsym $mod+Return exec i3-sensible-terminal

# universal clipboard
bindsym Control+Insert exec --no-startup-id xclip -o -selection primary | xclip -i -selection clipboard

# kill focused window
bindsym $mod+Shift+Q kill

# start dmenu (a program launcher)
bindsym $mod+p exec dmenu_run -fn $default_font -b -nb $clr_unfocused_text -nf $clr_unfocused_backgr -sb $clr_focused_backgr -sf $clr_focused_text

# change focus
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+h split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen

# change container layout (stacked, tabbed, default)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout default

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
bindsym $mod+d focus child

# switch to workspace
bindsym $mod+1 workspace $ws_home
bindsym $mod+2 workspace $ws_web
bindsym $mod+3 workspace $ws_dev
bindsym $mod+4 workspace $ws_comm
bindsym $mod+5 workspace $ws_media
bindsym $mod+6 workspace $ws_games
bindsym $mod+7 workspace $ws_tmp
bindsym $mod+Control+Right workspace next
bindsym $mod+Control+Left workspace prev

# move focused container to workspace
bindsym $mod+Shift+exclam move container to workspace $ws_home
bindsym $mod+Shift+at move container to workspace $ws_web
bindsym $mod+Shift+numbersign move container to workspace $ws_dev
bindsym $mod+Shift+dollar move container to workspace $ws_comm
bindsym $mod+Shift+percent move container to workspace $ws_media
bindsym $mod+Shift+asciicircum move container to workspace $ws_games
bindsym $mod+Shift+ampersand move container to workspace $ws_tmp

# assign applications to workspaces by default
assign [class="^Iceweasel$"] $ws_web
assign [class="^Skype$"] $ws_comm
assign [class="^jetbrains-idea-ce$"] $ws_dev
assign [class="^Eclipse$"] $ws_dev
assign [class="^Deadbeef$"] $ws_media

# Multimedia keys
bindsym XF86HomePage workspace $ws_home
bindsym XF86AudioPlay exec deadbeef --play-pause
bindsym XF86Tools exec deadbeef
bindsym XF86AudioMute exec amixer set Master toggle
bindsym XF86AudioRaiseVolume exec amixer set Master 655+ unmute
bindsym XF86AudioLowerVolume exec amixer set Master 655- unmute
bindsym Shift+XF86AudioRaiseVolume exec amixer set Master 1310+ unmute
bindsym Shift+XF86AudioLowerVolume exec amixer set Master 1310- unmute

bindsym $mod+L exec i3lock -c 000000

# reload the configuration file
bindsym $mod+Shift+C reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+R restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+E exit

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym Left resize shrink width 10 px or 1 ppt
        bindsym Down resize grow height 10 px or 1 ppt
        bindsym Up resize shrink height 10 px or 1 ppt
        bindsym Right resize grow width 10 px or 1 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command i3status
}
